<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_sheet_background"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_sheet_background"
        android:backgroundTint="@color/main"
        android:fontFamily="@font/inter_bold"
        android:gravity="center"
        android:paddingVertical="13dp"
        android:text="@string/bottom_sheet_title_stadium_detail"
        android:textColor="@color/white"
        android:textSize="18sp"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/tv_edit_stadium_info_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:paddingHorizontal="16dp"
        android:focusable="true"
        android:fontFamily="@font/inter_medium"
        android:paddingVertical="14dp"
        android:text="Cập nhật chi tiết sân vận động"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey" />

    <TextView
        android:id="@+id/tv_edit_stadium_status_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:paddingHorizontal="16dp"
        android:fontFamily="@font/inter_medium"
        android:paddingVertical="14dp"
        android:text="Cập nhật trạng thái sân vận động"
        android:textSize="18sp" />

</LinearLayout>